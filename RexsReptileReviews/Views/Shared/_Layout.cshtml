<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Rex's Reptile Reviews</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary navbar-fixed-top">
		@Html.ActionLink("Rex's Reptile Reviews", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarColor01">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item">
					<a class="nav-link" href="~/Reviews/Index">Read Reviews</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="~/Reviews/Create">Write a Review</a>
				</li>
				@*<li>@Html.ActionLink("Read Reviews", "Index", "Reviews", new { @class = "nav-link" })</li>
				<li>@Html.ActionLink("Write a Review", "Create", "Reviews", new { @class = "nav-link" })</li>*@
			</ul>
			@Html.Partial("_LoginPartial")
		</div>
	</nav>

	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Rex's Reptile Reviews</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
